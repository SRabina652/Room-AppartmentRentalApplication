<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DisplayName"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:paddingRight="@dimen/_5sdp"
                android:id="@+id/displayRatingUserName"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/displayRatingUserName"
                android:text="display users Review Here"
                android:layout_toRightOf="@+id/displayRatingUserName"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/DisplayUsersReview"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/displayuserRatingAndReview"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/DisplayUsersReview"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>